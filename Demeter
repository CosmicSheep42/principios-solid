//No código abaixo ao tentar acessar o objeto Rua, o código transita entre os objetos rua e pessoa

class Endereco {
public:
    std::string rua;
};

class Pessoa {
public:
    Endereco* endereco;
};

void a() {
    Pessoa* pessoa = new Pessoa();
    std::cout << pessoa->endereco->rua;  // Violação da Lei de Demeter
}

//
class Endereco {
public:
    std::string rua;
};

class Pessoa {
public:
    Endereco* endereco;

    std::string getRua() {
        return endereco->rua;  // Segue a Lei de Demeter
    }
};

void foo() {
    Pessoa* pessoa = new Pessoa();
    std::cout << pessoa->getRua();  // Segue a Lei de Demeter
}
